@using HealthBookingSystemWebApp.DTOs
@model DoctorDTO
@{
    Layout = "_LayoutDoctor";
    ViewData["Title"] = "Profile";

}
<!-- Main Content -->
<div class="main-content">
    <!-- Header -->
    <header class="header">
        <h1 class="header-title">My Profile</h1>
        <div class="header-actions">
            <a class="user-profile" asp-action="Profile" asp-controller="Doctor" style="text-decoration: none;">
                <img src="@Model.User.AvatarUrl" alt="Doctor" class="user-avatar">
                <div class="user-info">
                    <h6 id="">
                        @Html.DisplayFor(model => model.User.FullName)
                     </h6>
                </div>
            </a>
        </div>
    </header>

    <!-- Profile Content -->
    <div class="content">
        <div class="profile-content">
            <!-- Professional Information -->
            <div class="dashboard-card">
                <div class="card-header-modern">
                    <h5>Personal Information</h5>
                    <button class="edit-profile-btn" data-bs-toggle="modal" data-bs-target="#editProfileModal">
                        <i class="fas fa-edit"></i>
                    </button>
                </div>
                <div class="card-content">
                    <div class="profile-info">
                        <div class="profile-avatar-section">
                            <div class="profile-avatar-container">
                                <img src="@Html.DisplayFor(Model => Model.User.AvatarUrl)" alt="Profile" class="profile-avatar-xl">
                                <button class="avatar-edit-btn" onclick="changeAvatar()">
                                    <i class="fas fa-camera"></i>
                                </button>
                            </div>
                            <div class="profile-basic-info">
                                <h4 id="">
                                    @Html.DisplayFor(model => model.User.FullName)
                                </h4>
                                <p id="doctorBio">
                                    @Html.DisplayFor(model => model.Bio)
                                </p>
                                <p id="doctorEmail">
                                    @Html.DisplayFor(model => model.User.Email)
                                </p>
                                <div class="profile-badges">
                                    <span class="profile-badge verified">
                                        <i class="fas fa-check-circle"></i> @Html.DisplayFor(model => model.Qualifications)
                                    </span>
                                    <span class="profile-badge member">
                                        <i class="fas fa-star"></i> @Html.DisplayFor(model => model.Experience)
                                    </span>
                                </div>
                            </div>
                        </div>
                        <div class="profile-details-grid">
                            <div class="detail-card">
                                <div class="detail-icon">
                                    <i class="fas fa-certificate"></i>
                                </div>
                                <div class="detail-content">
                                    <span class="detail-label">Qualifications</span>
                                    <span class="detail-value">@Html.DisplayFor(model => model.Qualifications)</span>
                                </div>
                            </div>
                            <div class="detail-card">
                                <div class="detail-icon">
                                    <i class="fas fa-hospital"></i>
                                </div>
                                <div class="detail-content">
                                    <span class="detail-label">Speciality</span>
                                    <span class="detail-value">@Html.DisplayFor(model => model.Specialty.Name)</span>
                                </div>
                            </div>
                            <div class="detail-card">
                                <div class="detail-icon">
                                    <i class="fas fa-phone-alt"></i>
                                </div>
                                <div class="detail-content">
                                    <span class="detail-label">Office Phone</span>
                                    <span class="detail-value">@Html.DisplayFor(model => model.User.PhoneNumber)</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Schedule & Availability -->
            <div class="dashboard-card">
                <div class="card-header-modern">
                    <h5>Schedule & Availability</h5>
                    @* <button class="edit-profile-btn" onclick="editSchedule()">
                        <i class="fas fa-edit"></i>
                    </button> *@
                </div>
                <div class="card-content">
                    <div class="schedule-grid" style="border: none; display: grid; grid-template-columns: 1fr 1fr 1fr 1fr 1fr 1fr 1fr;">
                        <div class="schedule-day">
                            <h6>Monday</h6>
                            <p>9:00 AM - 5:00 PM</p>
                        </div>
                        <div class="schedule-day">
                            <h6>Tuesday</h6>
                            <p>9:00 AM - 5:00 PM</p>
                        </div>
                        <div class="schedule-day">
                            <h6>Wednesday</h6>
                            <p>9:00 AM - 5:00 PM</p>
                        </div>
                        <div class="schedule-day">
                            <h6>Thursday</h6>
                            <p>9:00 AM - 5:00 PM</p>
                        </div>
                        <div class="schedule-day">
                            <h6>Friday</h6>
                            <p>9:00 AM - 3:00 PM</p>
                        </div>
                        <div class="schedule-day weekend">
                            <h6>Saturday</h6>
                            <p>Closed</p>
                        </div>
                        <div class="schedule-day weekend">
                            <h6>Sunday</h6>
                            <p>Closed</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Edit Professional Info Modal -->
<div class="modal fade" id="editProfileModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Edit Professional Information</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form id="editProfessionalForm" method="POST" asp-action="UpdateProfile">
            <div class="modal-body">
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label for="editFirstName" class="form-label">Full Name</label>
                            <input type="text" class="form-control" name="name" value="@Model.User.FullName">
                        </div>
                        <div class="col-md-6 mb-3">
                            <label for="editPhone" class="form-label">Office Phone</label>
                            <input type="tel" class="form-control" name="phone" value="@Model.User.PhoneNumber">
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label for="editSpecialty" class="form-label">Primary Specialty</label>
                            <select class="form-control" id="editSpecialty" name="specialty">
                                <option value="@Model?.Specialty?.SpecialtyId" selected>@Model?.Specialty?.Name</option>
                                @foreach (var specialty in ViewBag.Specialties)
                                {
                                    <option value="@specialty.SpecialtyId">@specialty.Name</option>
                                }
                            </select>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label for="editEmail" class="form-label">Experience</label>
                            <input type="text" class="form-control" name="exp" value="@Model?.Experience">
                        </div>
                    </div>
                    <div class="mb-3">
                        <label for="editMedicalSchool" class="form-label">Medical School</label>
                        <textarea class="form-control" rows="2" name="bio">@Model?.Bio</textarea>
                    </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="submit" class="btn btn-primary">Save Changes</button>
            </div>
        </form>
        </div>
    </div>
</div>

<script src="~/js/doctor/profile.js"></script>
