@model BusinessObject.Models.Doctor
@{
    Layout = "_LayoutDoctor";
    ViewData["Title"] = "Profile";

}
<!-- Main Content -->
<div class="main-content">
    <!-- Header -->
    <header class="header">
        <h1 class="header-title">My Profile</h1>
        <div class="header-actions">
            <button class="notification-btn">
                <i class="fas fa-bell"></i>
                <span class="notification-badge">5</span>
            </button>
            <a class="user-profile" asp-action="Profile" asp-controller="Doctor" style="text-decoration: none;">
                <img src="@Model.User.AvatarUrl" alt="Doctor" class="user-avatar">
                <div class="user-info">
                    <h6 id="">
                        @Html.DisplayFor(model => model.User.FullName)
                     </h6>
                </div>
            </a>
        </div>
    </header>

    <!-- Profile Content -->
    <div class="content">
        <div class="profile-content">
            <!-- Professional Information -->
            <div class="dashboard-card">
                <div class="card-header-modern">
                    <h5>Personal Information</h5>
                    <button class="edit-profile-btn" onclick="editProfessionalInfo()">
                        <i class="fas fa-edit"></i>
                    </button>
                </div>
                <div class="card-content">
                    <div class="profile-info">
                        <div class="profile-avatar-section">
                            <div class="profile-avatar-container">
                                <img src="@Html.DisplayFor(Model => Model.User.AvatarUrl)" alt="Profile" class="profile-avatar-xl">
                                <button class="avatar-edit-btn" onclick="changeAvatar()">
                                    <i class="fas fa-camera"></i>
                                </button>
                            </div>
                            <div class="profile-basic-info">
                                <h4 id="">
                                    @Html.DisplayFor(model => model.User.FullName)
                                </h4>
                                <p id="doctorBio">
                                    @Html.DisplayFor(model => model.Bio)
                                </p>
                                <p id="doctorEmail">
                                    @Html.DisplayFor(model => model.User.Email)
                                </p>
                                <div class="profile-badges">
                                    <span class="profile-badge verified">
                                        <i class="fas fa-check-circle"></i> @Html.DisplayFor(model => model.Qualifications)
                                    </span>
                                    <span class="profile-badge member">
                                        <i class="fas fa-star"></i> @Html.DisplayFor(model => model.Experience)
                                    </span>
                                </div>
                            </div>
                        </div>
                        <div class="profile-details-grid">
                            <div class="detail-card">
                                <div class="detail-icon">
                                    <i class="fas fa-certificate"></i>
                                </div>
                                <div class="detail-content">
                                    <span class="detail-label">Qualifications</span>
                                    <span class="detail-value">@Html.DisplayFor(model => model.Qualifications)</span>
                                </div>
                            </div>
                            <div class="detail-card">
                                <div class="detail-icon">
                                    <i class="fas fa-hospital"></i>
                                </div>
                                <div class="detail-content">
                                    <span class="detail-label">Speciality</span>
                                    <span class="detail-value">@Html.DisplayFor(model => model.Specialty.Name)</span>
                                </div>
                            </div>
                            <div class="detail-card">
                                <div class="detail-icon">
                                    <i class="fas fa-phone-alt"></i>
                                </div>
                                <div class="detail-content">
                                    <span class="detail-label">Office Phone</span>
                                    <span class="detail-value">@Html.DisplayFor(model => model.User.PhoneNumber)</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Practice Statistics -->
            <div class="dashboard-card">
                <div class="card-header-modern">
                    <h5>Practice Statistics</h5>
                </div>
                <div class="card-content">
                    <div class="practice-stats-grid">
                        <div class="practice-stat-card">
                            <div class="metric-header">
                                <div class="metric-icon bg-primary">
                                    <i class="fas fa-users"></i>
                                </div>
                                <div class="metric-info">
                                    <h6>Total Patients</h6>
                                    <span class="metric-value">
                                        @{
                                            var distinctPatientIds = Model.Appointments
                                            .GroupBy(a => a.PatientUserId)
                                            .Select(g => g.Key)
                                            .ToList();
                                            var uniquePatientCount = distinctPatientIds.Count();
                                        }
                                        @uniquePatientCount
                                    </span>
                                </div>
                            </div>
                        </div>
                        <div class="practice-stat-card">
                            <div class="metric-header">
                                <div class="metric-icon bg-success">
                                    <i class="fas fa-calendar-check"></i>
                                </div>
                                <div class="metric-info">
                                    <h6>Total Appointments</h6>
                                    @if (Model.Appointments != null)
                                    {
                                        <span>@Model.Appointments.Count()</span>
                                    }
                                    else
                                    {
                                        <span>0</span>
                                    }
                                </div>
                            </div>
                        </div>
                        <div class="practice-stat-card">
                            <div class="metric-header">
                                <div class="metric-icon bg-warning">
                                    <i class="fas fa-star"></i>
                                </div>
                                <div class="metric-info">
                                    <h6>Average Rating</h6>
                                    <span class="metric-value">@Html.DisplayFor(model => model.Rating)</span>
                                </div>
                            </div>
                        </div>
                        <div class="practice-stat-card">
                            <div class="metric-header">
                                <div class="metric-icon bg-info">
                                    <i class="fas fa-clock"></i>
                                </div>
                                <div class="metric-info">
                                    <h6>Experience</h6>
                                    <span class="metric-value">@Html.DisplayFor(model => model.Experience)</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Specializations & Certifications -->
            <div class="dashboard-card">
                <div class="card-header-modern">
                    <h5>Specializations & Certifications</h5>
                    <button class="edit-profile-btn" onclick="editSpecializations()">
                        <i class="fas fa-edit"></i>
                    </button>
                </div>
                <div class="card-content">
                    <div class="specializations-section">
                        <div class="specialization-category">
                            <h6>Primary Specialization</h6>
                            <div class="specialization-tags">
                                <span class="specialization-tag primary">Cardiology</span>
                            </div>
                        </div>
                        <div class="specialization-category">
                            <h6>Sub-specializations</h6>
                            <div class="specialization-tags">
                                <span class="specialization-tag">Interventional Cardiology</span>
                                <span class="specialization-tag">Cardiac Electrophysiology</span>
                                <span class="specialization-tag">Heart Failure</span>
                            </div>
                        </div>
                        <div class="specialization-category">
                            <h6>Board Certifications</h6>
                            <div class="specialization-tags">
                                <span class="specialization-tag certification">American Board of Internal Medicine</span>
                                <span class="specialization-tag certification">American Board of Cardiovascular Disease</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Schedule & Availability -->
            <div class="dashboard-card">
                <div class="card-header-modern">
                    <h5>Schedule & Availability</h5>
                    @* <button class="edit-profile-btn" onclick="editSchedule()">
                        <i class="fas fa-edit"></i>
                    </button> *@
                </div>
                <div class="card-content">
                    <div class="schedule-grid" style="border: none; display: grid; grid-template-columns: 1fr 1fr 1fr 1fr 1fr 1fr 1fr;">
                        <div class="schedule-day">
                            <h6>Monday</h6>
                            <p>9:00 AM - 5:00 PM</p>
                        </div>
                        <div class="schedule-day">
                            <h6>Tuesday</h6>
                            <p>9:00 AM - 5:00 PM</p>
                        </div>
                        <div class="schedule-day">
                            <h6>Wednesday</h6>
                            <p>9:00 AM - 5:00 PM</p>
                        </div>
                        <div class="schedule-day">
                            <h6>Thursday</h6>
                            <p>9:00 AM - 5:00 PM</p>
                        </div>
                        <div class="schedule-day">
                            <h6>Friday</h6>
                            <p>9:00 AM - 3:00 PM</p>
                        </div>
                        <div class="schedule-day weekend">
                            <h6>Saturday</h6>
                            <p>Closed</p>
                        </div>
                        <div class="schedule-day weekend">
                            <h6>Sunday</h6>
                            <p>Closed</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Edit Professional Info Modal -->
<div class="modal fade" id="editProfessionalModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Edit Professional Information</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <form id="editProfessionalForm">
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label for="editFirstName" class="form-label">First Name</label>
                            <input type="text" class="form-control" id="editFirstName">
                        </div>
                        <div class="col-md-6 mb-3">
                            <label for="editLastName" class="form-label">Last Name</label>
                            <input type="text" class="form-control" id="editLastName">
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label for="editSpecialty" class="form-label">Primary Specialty</label>
                            <select class="form-control" id="editSpecialty">
                                <option value="cardiology">Cardiology</option>
                                <option value="dermatology">Dermatology</option>
                                <option value="neurology">Neurology</option>
                                <option value="orthopedics">Orthopedics</option>
                                <option value="pediatrics">Pediatrics</option>
                                <option value="general">General Medicine</option>
                            </select>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label for="editEmail" class="form-label">Email</label>
                            <input type="email" class="form-control" id="editEmail">
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label for="editPhone" class="form-label">Office Phone</label>
                            <input type="tel" class="form-control" id="editPhone">
                        </div>
                        <div class="col-md-6 mb-3">
                            <label for="editLicense" class="form-label">License Number</label>
                            <input type="text" class="form-control" id="editLicense">
                        </div>
                    </div>
                    <div class="mb-3">
                        <label for="editMedicalSchool" class="form-label">Medical School</label>
                        <input type="text" class="form-control" id="editMedicalSchool">
                    </div>
                    <div class="mb-3">
                        <label for="editHospital" class="form-label">Hospital Affiliation</label>
                        <input type="text" class="form-control" id="editHospital">
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" onclick="saveProfessionalInfo()">Save Changes</button>
            </div>
        </div>
    </div>
</div>

<script src="~/js/doctor/profile.js"></script>
