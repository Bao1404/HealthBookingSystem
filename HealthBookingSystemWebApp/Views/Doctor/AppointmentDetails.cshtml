@model AppointmentDTO
@{
    Layout = "_LayoutDoctor";
    ViewData["Title"] = "Appointment Details";
}

<!-- Main Content -->
<div class="main-content">
    <!-- Header -->
    <header class="header">
        <h1 class="header-title">Appointment Details</h1>
        <div class="header-actions">
            <a asp-action="Appointments" class="btn btn-outline-secondary">
                <i class="fas fa-arrow-left"></i>
                Back to Appointments
            </a>
            <div class="user-profile">
                <img src="@ViewBag.Doctor.User.AvatarUrl" alt="Doctor" class="user-avatar">
                <div class="user-info">
                    <h6 id="doctorName">@ViewBag.Doctor.User.FullName</h6>
                    <p>@ViewBag.Doctor.Specialty.Name</p>
                </div>
            </div>
        </div>
    </header>

    <!-- Content -->
    <div class="content">
        <div class="row">
            <!-- Appointment Info -->
            <div class="col-lg-8">
                <div class="dashboard-card">
                    <div class="card-header">
                        <h5 class="card-title">Appointment Information</h5>
                        <span class="badge bg-@(Model.Status switch { "Completed" => "success", "Cancelled" => "danger", "Upcoming" => "primary", _ => "secondary" }) fs-6">
                            @Model.Status
                        </span>
                    </div>
                    <div class="card-content">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="info-group">
                                    <label>Date & Time</label>
                                    <p><i class="fas fa-calendar-alt me-2"></i>@Model.AppointmentDateTime.ToString("dddd, MMMM dd, yyyy")</p>
                                    <p><i class="fas fa-clock me-2"></i>@Model.AppointmentDateTime.ToString("HH:mm")</p>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="info-group">
                                    <label>Appointment ID</label>
                                    <p>@Model.AppointmentId</p>
                                </div>
                            </div>
                        </div>

                        <div class="info-group">
                            <label>Notes/Reason for Visit</label>
                            <p>@(Model.Notes ?? "No additional notes provided")</p>
                        </div>

                        <div class="info-group">
                            <label>Created At</label>
                            <p>@Model.CreatedAt.ToString("MMM dd, yyyy HH:mm")</p>
                        </div>

                        @if(Model.UpdatedAt.HasValue)
                        {
                            <div class="info-group">
                                <label>Last Updated</label>
                                <p>@Model.UpdatedAt?.ToString("MMM dd, yyyy HH:mm")</p>
                            </div>
                        }
                    </div>
                </div>

                <!-- Actions Card -->
                @if(Model.Status == "Pending")
                {
                    <div class="dashboard-card">
                        <div class="card-header">
                            <h5 class="card-title">Actions</h5>
                        </div>
                        <div class="card-content">
                            <div class="action-buttons">
                                <form asp-action="ApproveAppointment" method="post" style="display: inline;">
                                    <input type="hidden" name="appointmentId" value="@Model.AppointmentId" />
                                    <button type="submit" class="btn btn-success">
                                        <i class="fas fa-check"></i> Approve Appointment
                                    </button>
                                </form>
                                <button class="btn btn-danger" onclick="showRejectModal(@Model.AppointmentId)">
                                    <i class="fas fa-times"></i> Reject Appointment
                                </button>
                            </div>
                        </div>
                    </div>
                }
                else if(Model.Status == "Confirmed" && Model.AppointmentDateTime.Date == DateTime.Today)
                {
                    <div class="dashboard-card">
                        <div class="card-header">
                            <h5 class="card-title">Actions</h5>
                        </div>
                        <div class="card-content">
                            <div class="action-buttons">
                                <form asp-action="CompleteAppointment" method="post" style="display: inline;">
                                    <input type="hidden" name="appointmentId" value="@Model.AppointmentId" />
                                    <button type="submit" class="btn btn-primary">
                                        <i class="fas fa-check-circle"></i> Mark as Completed
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                }
            </div>

            <!-- Patient Info -->
            <div class="col-lg-4">
                <div class="dashboard-card">
                    <div class="card-header">
                        <h5 class="card-title">Patient Information</h5>
                    </div>
                    <div class="card-content">
                        <div class="patient-profile">
                            <div class="patient-avatar">
                                <img src="@(Model.PatientUser.User.AvatarUrl ?? "/placeholder.svg?height=80&width=80")" alt="Patient" class="avatar">
                            </div>
                            <div class="patient-details">
                                <h6>@Model.PatientUser.User.FullName</h6>
                                <p class="text-muted">Patient</p>
                            </div>
                        </div>

                        <div class="contact-info">
                            <div class="info-item">
                                <i class="fas fa-envelope"></i>
                                <span>@Model.PatientUser.User.Email</span>
                            </div>
                            @if(!string.IsNullOrEmpty(Model.PatientUser.User.PhoneNumber))
                            {
                                <div class="info-item">
                                    <i class="fas fa-phone"></i>
                                    <span>@Model.PatientUser.User.PhoneNumber</span>
                                </div>
                            }
                            @if(Model.PatientUser.DateOfBirth.HasValue)
                            {
                                <div class="info-item">
                                    <i class="fas fa-birthday-cake"></i>
                                    <span>@Model.PatientUser.DateOfBirth?.ToString("MMM dd, yyyy") (Age: @((DateTime.Now.Year - Model.PatientUser.DateOfBirth?.Year) ?? 0))</span>
                                </div>
                            }
                            @if(!string.IsNullOrEmpty(Model.PatientUser.Gender))
                            {
                                <div class="info-item">
                                    <i class="fas fa-user"></i>
                                    <span>@Model.PatientUser.Gender</span>
                                </div>
                            }
                            @if(!string.IsNullOrEmpty(Model.PatientUser.Address))
                            {
                                <div class="info-item">
                                    <i class="fas fa-map-marker-alt"></i>
                                    <span>@Model.PatientUser.Address</span>
                                </div>
                            }
                        </div>

                        @if(!string.IsNullOrEmpty(Model.PatientUser.EmergencyPhoneNumber))
                        {
                            <div class="emergency-contact">
                                <h6>Emergency Contact</h6>
                                <div class="info-item">
                                    <i class="fas fa-phone-alt text-danger"></i>
                                    <span>@Model.PatientUser.EmergencyPhoneNumber</span>
                                </div>
                            </div>
                        }

                        <!-- Medical Info -->
                        <div class="medical-info">
                            <h6>Medical Information</h6>
                            @if(!string.IsNullOrEmpty(Model.PatientUser.BloodType))
                            {
                                <div class="info-item">
                                    <i class="fas fa-tint"></i>
                                    <span>Blood Type: @Model.PatientUser.BloodType</span>
                                </div>
                            }
                            @if(!string.IsNullOrEmpty(Model.PatientUser.Allergies))
                            {
                                <div class="info-item">
                                    <i class="fas fa-exclamation-triangle text-warning"></i>
                                    <span>Allergies: @Model.PatientUser.Allergies</span>
                                </div>
                            }
                            @if(Model.PatientUser.Weight.HasValue || Model.PatientUser.Height.HasValue)
                            {
                                <div class="info-item">
                                    <i class="fas fa-ruler"></i>
                                    <span>
                                        @if(Model.PatientUser.Height.HasValue) { <text>Height: @Model.PatientUser.Height cm</text> }
                                        @if(Model.PatientUser.Weight.HasValue) { <text>Weight: @Model.PatientUser.Weight kg</text> }
                                        @if(Model.PatientUser.Bmi.HasValue) { <text>(BMI: @Model.PatientUser.Bmi.Value.ToString("F1"))</text> }
                                    </span>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    /* --- Variables & Global --- */
    :root {
        --primary-color: #4361ee;
        --secondary-color: #e0e6ed;
        --text-dark: #0e1726;
        --text-muted: #888ea8;
        --success-soft: #e0fbf3;
        --success-text: #00966d;
        --danger-soft: #fff5f5;
        --danger-text: #e7515a;
        --warning-soft: #fff9ed;
        --warning-text: #e2a03f;
        --card-shadow: 0 10px 20px -10px rgba(0,0,0,0.08);
        --border-radius: 12px;
    }

    .main-content {
        background-color: #f9fafb;
        min-height: 100vh;
        padding-bottom: 40px;
    }

    /* --- Dashboard Card --- */
    .dashboard-card {
        background: #ffffff;
        border-radius: var(--border-radius);
        box-shadow: var(--card-shadow);
        border: 1px solid #f1f2f3;
        margin-bottom: 24px;
        transition: transform 0.2s ease;
    }

    /* Header của Card */
    .card-header {
        background: transparent;
        border-bottom: 1px solid #ebedf2;
        padding: 20px 25px;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .card-title {
        font-size: 18px;
        font-weight: 700;
        color: var(--text-dark);
        margin: 0;
    }

    .card-content {
        padding: 25px;
    }

    /* --- Badge Styles (Soft Pills) --- */
    .badge {
        padding: 8px 16px;
        border-radius: 30px;
        font-weight: 600;
        font-size: 0.85rem !important;
        letter-spacing: 0.5px;
    }

    /* Override Bootstrap background colors for badges */
    .bg-success {
        background-color: var(--success-soft) !important;
        color: var(--success-text) !important;
    }

    .bg-danger {
        background-color: var(--danger-soft) !important;
        color: var(--danger-text) !important;
    }

    .bg-primary {
        background-color: #e7f1ff !important;
        color: var(--primary-color) !important;
    }

    .bg-secondary {
        background-color: #f1f2f3 !important;
        color: #5c5c5c !important;
    }

    /* --- Information Groups (Left Column) --- */
    .info-group {
        margin-bottom: 24px;
    }

        .info-group label {
            display: block;
            font-size: 12px;
            text-transform: uppercase;
            color: var(--text-muted);
            font-weight: 700;
            letter-spacing: 1px;
            margin-bottom: 8px;
        }

        .info-group p {
            font-size: 16px;
            color: var(--text-dark);
            font-weight: 500;
            margin: 0;
            line-height: 1.5;
        }

        .info-group i {
            color: var(--primary-color);
            opacity: 0.8;
        }

    /* --- Patient Profile (Right Column) --- */
    .patient-profile {
        display: flex;
        flex-direction: column;
        align-items: center;
        text-align: center;
        padding-bottom: 25px;
        border-bottom: 1px dashed #ebedf2;
        margin-bottom: 25px;
    }

    .patient-avatar {
        margin-bottom: 15px;
        position: relative;
    }

        .patient-avatar .avatar {
            width: 100px;
            height: 100px;
            border-radius: 50%;
            object-fit: cover;
            border: 4px solid #fff;
            box-shadow: 0 5px 15px rgba(0,0,0,0.1);
        }

    .patient-details h6 {
        font-size: 18px;
        font-weight: 700;
        margin-bottom: 5px;
        color: var(--text-dark);
    }

    .patient-details p {
        font-size: 14px;
        color: var(--text-muted);
        background: #f1f2f3;
        display: inline-block;
        padding: 4px 12px;
        border-radius: 20px;
    }

    /* --- Contact & Medical Info Lists --- */
    .contact-info, .medical-info, .emergency-contact {
        margin-bottom: 20px;
    }

        .medical-info h6, .emergency-contact h6 {
            font-size: 14px;
            font-weight: 700;
            color: var(--text-dark);
            margin-bottom: 15px;
            padding-left: 10px;
            border-left: 3px solid var(--primary-color);
        }

    .info-item {
        display: flex;
        align-items: center;
        padding: 10px 0;
        border-bottom: 1px solid #f6f6f6;
        color: #515365;
        font-size: 14px;
        transition: all 0.3s;
    }

        .info-item:last-child {
            border-bottom: none;
        }

        .info-item:hover {
            background-color: #fafafa;
            padding-left: 10px;
            border-radius: 6px;
        }

        .info-item i {
            width: 35px;
            height: 35px;
            display: flex;
            align-items: center;
            justify-content: center;
            background: #f1f2f3;
            border-radius: 8px;
            margin-right: 15px;
            font-size: 14px;
            color: var(--text-dark);
        }

            /* Specific Icon Colors */
            .info-item i.fa-envelope {
                color: #4361ee;
                background: #eaf1ff;
            }

            .info-item i.fa-phone {
                color: #009688;
                background: #e0f2f1;
            }

            .info-item i.fa-birthday-cake {
                color: #e2a03f;
                background: #fff3e0;
            }

            .info-item i.fa-map-marker-alt {
                color: #e7515a;
                background: #ffebee;
            }

            .info-item i.fa-tint {
                color: #e7515a;
                background: #ffebee;
            }
            /* Blood */
            .info-item i.fa-exclamation-triangle {
                color: #e2a03f;
                background: #fff8e1;
            }
    /* Allergy */

    /* --- Action Buttons --- */
    .action-buttons {
        display: flex;
        gap: 15px;
        flex-wrap: wrap;
    }

        .action-buttons button {
            padding: 10px 20px;
            border-radius: 8px;
            font-weight: 600;
            display: flex;
            align-items: center;
            gap: 8px;
            transition: all 0.3s;
            border: none;
        }

            .action-buttons button:hover {
                transform: translateY(-2px);
                box-shadow: 0 5px 15px rgba(0,0,0,0.1);
            }

    /* Button Specifics */
    .btn-success {
        background-color: #00ab55;
        color: white;
    }

    .btn-danger {
        background-color: #ff4842;
        color: white;
    }

    .btn-primary {
        background-color: #2065d1;
        color: white;
    }

    /* --- Header Actions --- */
    .header-actions {
        display: flex;
        gap: 15px;
        align-items: center;
    }
</style>

<script>
    function showRejectModal(appointmentId) {
        var modal = new bootstrap.Modal(document.getElementById('rejectAppointmentModal'));
        modal.show();
    }

    function submitReject() {
        document.getElementById('rejectAppointmentForm').submit();
    }
</script> 