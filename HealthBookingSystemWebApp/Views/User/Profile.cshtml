                            <button class="btn btn-danger btn-sm" onclick="deleteAccount()">Delete</button>
                        </div>
                    </div>
                </div>
            </div> *@
        </div>
    </div>
</div>

<!-- Edit Personal Info Modal -->
<div class="modal fade" id="editPersonalModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Edit Personal Information</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form id="editPersonalForm" method="POST" action="/Edit">
                <div class="modal-body">
                    <input type="text" name="userId" value="@Model.UserId" hidden/>
                    <div class="row">
                        <div class="mb-3">
                            <label for="editFirstName" class="form-label">Full Name</label>
                            <input type="text" class="form-control" id="" name="fullName" value="@Model.User.FullName">
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label for="editEmail" class="form-label">Email</label>
                            <input type="email" class="form-control" id="" name="email" value="@Model.User.Email">
                        </div>
                        <div class="col-md-6 mb-3">
                            <label for="editPhone" class="form-label">Phone</label>
                            <input type="tel" class="form-control" id="" name="phone" value="@Model.User.PhoneNumber">
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label for="editDOB" class="form-label">Date of Birth</label>
                            <input type="date" class="form-control" id="" name="dob" value="@Model.DateOfBirth.ToString("yyyy-MM-dd")">
                        </div>
                        <div class="col-md-6 mb-3">
                            <label for="editGender" class="form-label">Gender</label>
                            <select class="form-select" id="" name="gender">
                                <option value="@Model.Gender">@Model.Gender</option>
                                <option value="male">Male</option>
                                <option value="female">Female</option>
                                <option value="other">Other</option>
                            </select>
                        </div>
                    </div>
                    <div class="mb-3">
                        <label for="editAddress" class="form-label">Address</label>
                        <textarea class="form-control" id="" rows="3" name="address">@Model.Address</textarea>
                    </div>
                    <div class="mb-3">
                        <label for="editEmergencyContact" class="form-label">Emergency Contact</label>
                        <input type="text" class="form-control" id="" name="ePhone" value="@Model.EmergencyPhoneNumber">
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">Save Changes</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Edit Personal Health Info Modal -->
<div class="modal fade" id="editPersonaHealthlModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Edit Health Information</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form id="editPersonalForm" method="POST" action="/Health">
                <div class="modal-body">
                    <input type="text" name="userId" value="@Model.UserId" hidden />
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label for="editBlood" class="form-label">Blood Type</label>
                            <select class="form-select" name="blood">
                                <option value="@Model.BloodType">@Model.BloodType</option>
                                <option value="A+">A+</option>
                                <option value="A-">A-</option>
                                <option value="B+">B+</option>
                                <option value="B-">B-</option>
                                <option value="AB+">AB+</option>
                                <option value="AB-">AB-</option>
                                <option value="O+">O+</option>
                                <option value="O-">O-</option>
                                <option value="unknown">Unknown</option>
                            </select>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label for="editAllergy" class="form-label">Allergy</label>
                            <input type="tel" class="form-control" id="" name="allergy" value="@Model.Allergies">
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label for="editWeight" class="form-label">Weigtht (kg)</label>
                            <input type="text" class="form-control" id="" name="weight" value="@Model.Weight">
                        </div>
                        <div class="col-md-6 mb-3">
                            <label for="editHeight" class="form-label">Height (cm)</label>
                            <input type="text" class="form-control" id="" name="height" value="@Model.Height">
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">Save Changes</button>
                </div>
            </form>
        </div>
    </div>
</div>

<script src="~/js/user/profile.js"></script>
