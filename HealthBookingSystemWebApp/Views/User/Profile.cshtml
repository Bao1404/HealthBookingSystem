@{
    Layout = "_LayoutUser";
    ViewData["Title"] = "Profile";
}
<!-- Main Content -->
<div class="main-content">
    <!-- Header -->
    <header class="header">
        <h1 class="header-title">My Profile</h1>
        @* <div class="search-container">
            <i class="fas fa-search search-icon"></i>
            <input type="text" class="search-input" placeholder="Search..." id="searchInput">
        </div> *@
        <div class="header-actions">
            <button class="notification-btn">
                <i class="fas fa-bell"></i>
                <span class="notification-badge">3</span>
            </button>
            <a asp-controller="User" asp-action="Profile" style="text-decoration: none;">
                <div class="user-profile">
                    <img src="@Model.User.AvatarUrl" alt="User" class="user-avatar">
                    <div class="user-info">
                        <h6 id="">@Model.User.FullName</h6>
                        <p>Patient</p>
                    </div>
                </div>
            </a>
        </div>
    </header>

    <!-- Profile Content -->
    <div class="content">
        <div class="profile-content">
            <!-- Personal Information -->
            <div class="dashboard-card">
                <div class="card-header-modern">
                    <h5>Personal Information</h5>
                    <button class="edit-profile-btn" data-bs-toggle="modal" data-bs-target="#editPersonalModal">
                        <i class="fas fa-edit"></i>
                    </button>
                </div>
                <div class="card-content">
                    <div class="profile-info">
                        <div class="profile-avatar-section">
                            <div class="profile-avatar-container">
                                <img src="@Model.User.AvatarUrl" alt="Profile" class="profile-avatar-xl">
                                <button class="avatar-edit-btn" onclick="changeAvatar()">
                                    <i class="fas fa-camera"></i>
                                </button>
                            </div>
                            <div class="profile-basic-info">
                                <h4 id="profileName">@Model.User.FullName</h4>
                                <p id="profileEmail">@Model.User.Email</p>
                                <p id="profilePhone">@Model.User.PhoneNumber</p>
                                <div class="profile-badges">
                                    <span class="profile-badge verified">
                                        <i class="fas fa-check-circle"></i> Verified
                                    </span>
                                    @* <span class="profile-badge member">
                                        <i class="fas fa-star"></i> Premium Member
                                    </span> *@
                                </div>
                            </div>
                        </div>
                        <div class="profile-details-grid">
                            <div class="detail-card">
                                <div class="detail-icon">
                                    <i class="fas fa-birthday-cake"></i>
                                </div>
                                <div class="detail-content">
                                    <span class="detail-label">Date of Birth</span>
                                    <span class="detail-value" id="profileDOB">@Model.DateOfBirth</span>
                                </div>
                            </div>
                            <div class="detail-card">
                                <div class="detail-icon">
                                    <i class="fas fa-venus-mars"></i>
                                </div>
                                <div class="detail-content">
                                    <span class="detail-label">Gender</span>
                                    <span class="detail-value">@Model.Gender</span>
                                </div>
                            </div>
                            <div class="detail-card">
                                <div class="detail-icon">
                                    <i class="fas fa-map-marker-alt"></i>
                                </div>
                                <div class="detail-content">
                                    <span class="detail-label">Address</span>
                                    <span class="detail-value">@Model.Address</span>
                                </div>
                            </div>
                            <div class="detail-card">
                                <div class="detail-icon">
                                    <i class="fas fa-phone-alt"></i>
                                </div>
                                <div class="detail-content">
                                    <span class="detail-label">Emergency Contact</span>
                                    <span class="detail-value">@Model.EmergencyPhoneNumber</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Health Information -->
            <div class="dashboard-card">
                <div class="card-header-modern">
                    <h5>Health Information</h5>
                    <button class="edit-profile-btn" data-bs-toggle="modal" data-bs-target="#editPersonaHealthlModal" >
                        <i class="fas fa-edit"></i>
                    </button>
                </div>
                <div class="card-content">
                    <div class="health-info-grid">
                        <div class="health-metric-card">
                            <div class="metric-header">
                                <div class="metric-icon bg-danger">
                                    <i class="fas fa-tint"></i>
                                </div>
                                <div class="metric-info">
                                    <h6>Blood Type</h6>
                                    <span class="metric-value">@Model.BloodType</span>
                                </div>
                            </div>
                        </div>
                        <div class="health-metric-card">
                            <div class="metric-header">
                                <div class="metric-icon bg-primary">
                                    <i class="fas fa-weight"></i>
                                </div>
                                <div class="metric-info">
                                    <h6>Weight</h6>
                                    <span class="metric-value">@Model.Weight kg</span>
                                </div>
                            </div>
                        </div>
                        <div class="health-metric-card">
                            <div class="metric-header">
                                <div class="metric-icon bg-success">
                                    <i class="fas fa-ruler-vertical"></i>
                                </div>
                                <div class="metric-info">
                                    <h6>Height</h6>
                                    <span class="metric-value">@Model.Height cm</span>
                                </div>
                            </div>
                        </div>
                        <div class="health-metric-card">
                            <div class="metric-header">
                                <div class="metric-icon bg-warning">
                                    <i class="fas fa-calculator"></i>
                                </div>
                                <div class="metric-info">
                                    <h6>BMI</h6>
                                    <span class="metric-value">@Model.Bmi</span>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="health-details">
                        <div class="health-section">
                            <h6>Allergies</h6>
                            <div class="health-tags">
                                <span class="health-tag allergy">@Model.Allergies</span>
                                @* <button class="add-tag-btn" onclick="addAllergy()">
                                    <i class="fas fa-plus"></i> Add
                                </button> *@
                            </div>
                        </div>
                        @* <div class="health-section">
                            <h6>Current Medications</h6>
                            <div class="health-tags">
                                <span class="health-tag medication">Lisinopril 10mg</span>
                                <span class="health-tag medication">Metformin 500mg</span>
                                <button class="add-tag-btn" onclick="addMedication()">
                                    <i class="fas fa-plus"></i> Add
                                </button>
                            </div>
                        </div> *@
                        <div class="health-section">
                            <h6>Medical Conditions</h6>
                            <div class="health-tags">
                                @foreach (var history in ViewBag.MedicalHistory)
                                {
                                    <span class="health-tag condition">@history.ConditionName</span>
                                }
                                @* <button class="add-tag-btn" onclick="addCondition()">
                                    <i class="fas fa-plus"></i> Add
                                </button> *@
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Insurance Information -->
            <div class="dashboard-card">
                <div class="card-header-modern">
                    <h5>Insurance Information</h5>
                    <button class="edit-profile-btn" onclick="editInsurance()">
                        <i class="fas fa-edit"></i>
                    </button>
                </div>
                <div class="card-content">
                    <div class="insurance-info">
                        <div class="insurance-card">
                            <div class="insurance-header">
                                <div class="insurance-logo">
                                    <i class="fas fa-shield-alt"></i>
                                </div>
                                <div class="insurance-details">
                                    <h6>Blue Cross Blue Shield</h6>
                                    <p>Premium Plan</p>
                                </div>
                                <div class="insurance-status">
                                    <span class="status-badge active">Active</span>
                                </div>
                            </div>
                            <div class="insurance-details-grid">
                                <div class="insurance-detail">
                                    <span class="detail-label">Policy Number</span>
                                    <span class="detail-value">BC123456789</span>
                                </div>
                                <div class="insurance-detail">
                                    <span class="detail-label">Group Number</span>
                                    <span class="detail-value">GRP987654</span>
                                </div>
                                <div class="insurance-detail">
                                    <span class="detail-label">Effective Date</span>
                                    <span class="detail-value">January 1, 2024</span>
                                </div>
                                <div class="insurance-detail">
                                    <span class="detail-label">Copay</span>
                                    <span class="detail-value">$25</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Account Settings -->
            @* <div class="dashboard-card">
                <div class="card-header-modern">
                    <h5>Account Settings</h5>
                </div>
                <div class="card-content">
                    <div class="settings-list">
                        <div class="setting-item">
                            <div class="setting-info">
                                <i class="fas fa-bell setting-icon"></i>
                                <div>
                                    <h6>Notifications</h6>
                                    <p>Manage your notification preferences</p>
                                </div>
                            </div>
                            <div class="setting-toggle">
                                <label class="switch">
                                    <input type="checkbox" checked>
                                    <span class="slider"></span>
                                </label>
                            </div>
                        </div>
                        <div class="setting-item">
                            <div class="setting-info">
                                <i class="fas fa-lock setting-icon"></i>
                                <div>
                                    <h6>Two-Factor Authentication</h6>
                                    <p>Add an extra layer of security</p>
                                </div>
                            </div>
                            <div class="setting-toggle">
                                <label class="switch">
                                    <input type="checkbox">
                                    <span class="slider"></span>
                                </label>
                            </div>
                        </div>
                        <div class="setting-item">
                            <div class="setting-info">
                                <i class="fas fa-eye setting-icon"></i>
                                <div>
                                    <h6>Privacy Mode</h6>
                                    <p>Control who can see your information</p>
                                </div>
                            </div>
                            <div class="setting-toggle">
                                <label class="switch">
                                    <input type="checkbox" checked>
                                    <span class="slider"></span>
                                </label>
                            </div>
                        </div>
                        <div class="setting-item danger">
                            <div class="setting-info">
                                <i class="fas fa-trash setting-icon"></i>
                                <div>
                                    <h6>Delete Account</h6>
                                    <p>Permanently delete your account and data</p>
                                </div>
