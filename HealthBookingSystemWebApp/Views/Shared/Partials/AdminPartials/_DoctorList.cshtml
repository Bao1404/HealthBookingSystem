@using HealthBookingSystemWebApp.DTOs
@model List<DoctorDTO>
@*
    For more information on enabling MVC for empty projects, visit http://go.microsoft.com/fwlink/?LinkID=397860
*@
@if (Model.Any())
{
    foreach (var doctor in Model)
    {
        <tr>
            <td>
                <div class="d-flex align-items-center">
                    <img src="@doctor.User.AvatarUrl" alt="@doctor.User.FullName" class="rounded-circle me-2" width="40" height="40">
                    <div>
                        <div class="fw-bold">@doctor.User.FullName</div>
                        <small class="text-muted">@doctor.User.Email</small>
                    </div>
                </div>
            </td>
            <td>@doctor.User.PhoneNumber</td>
            <td>@doctor?.Specialty?.Name</td>
            <td>@doctor?.CreatedAt.ToString("dd/MM/yyyy")</td>
            <td>
                <div class="btn-group" role="group">
                    <a asp-controller="Admin" asp-action="PatientDetail" asp-route-id="@doctor?.UserId" class="btn btn-sm btn-outline-primary" title="View">
                        <i class="fas fa-eye"></i>
                    </a>
                </div>
            </td>
        </tr>
    }
}
else
{
    <tr>
        <td colspan="6" class="text-center text-muted">No doctor found.</td>
    </tr>
}