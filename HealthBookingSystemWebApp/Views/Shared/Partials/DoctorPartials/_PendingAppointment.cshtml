@model List<AppointmentDTO>
@*
    For more information on enabling MVC for empty projects, visit http://go.microsoft.com/fwlink/?LinkID=397860
*@
@if (ViewBag.PendingAppointments != null)
{
    @foreach (var appointment in (List<BusinessObject.Models.Appointment>)ViewBag.PendingAppointments)
    {
        <div class="appointment-item-detailed">
            <div class="appointment-header">
                <div class="patient-info">
                    <h6>@appointment.PatientUser.User.FullName</h6>
                    <p class="appointment-type">@(appointment.Notes ?? "General Consultation")</p>
                </div>
                <div class="appointment-time">
                    <i class="fas fa-clock"></i>
                    <span>@appointment.AppointmentDateTime.ToString("MMM dd, yyyy - HH:mm")</span>
                </div>
            </div>
            <div class="appointment-details">
                <p><strong>Patient Phone:</strong> @appointment.PatientUser.User.PhoneNumber</p>
                <p><strong>Notes:</strong> @(appointment.Notes ?? "No additional notes")</p>
            </div>
            <div class="appointment-actions">
                <form asp-action="ApproveAppointment" method="post" style="display: inline;">
                    <input type="hidden" name="appointmentId" value="@appointment.AppointmentId" />
                    <button type="submit" class="btn btn-success btn-sm">
                        <i class="fas fa-check"></i> Approve
                    </button>
                </form>
                <button class="btn btn-danger btn-sm" onclick="showRejectModal(@appointment.AppointmentId)">
                    <i class="fas fa-times"></i> Reject
                </button>
                <a asp-action="AppointmentDetails" asp-route-id="@appointment.AppointmentId" class="btn btn-info btn-sm">
                    <i class="fas fa-eye"></i> Details
                </a>
            </div>
        </div>
    }
}
else
{
    <div class="no-appointments">
        <i class="fas fa-calendar-check"></i>
        <p>No pending appointments</p>
    </div>
}