@model List<AppointmentDTO>
@*
    For more information on enabling MVC for empty projects, visit http://go.microsoft.com/fwlink/?LinkID=397860
*@
@if (Model.Any())
{
    @foreach (var appointment in Model)
    {
        <div class="appointment-item-detailed">
            <div class="appointment-header">
                <div class="patient-info">
                    <h6>@appointment.PatientUser.User.FullName</h6>
                    <p class="appointment-type">@(appointment.Notes ?? "General Consultation")</p>
                </div>
                <div class="appointment-time">
                    <i class="fas fa-clock"></i>
                    <span>@appointment.AppointmentDateTime.ToString("MMM dd, yyyy - HH:mm")</span>
                    <span class="badge bg-primary ms-2">@appointment.Status</span>
                </div>
            </div>
            <div class="appointment-details">
                <p><strong>Patient Phone:</strong> @appointment.PatientUser.User.PhoneNumber</p>
                <p><strong>Notes:</strong> @(appointment.Notes ?? "No additional notes")</p>
            </div>
            <div class="appointment-actions">
                <a asp-action="AppointmentDetails" asp-route-id="@appointment.AppointmentId" class="btn btn-sm btn-outline-primary">
                    <i class="fas fa-eye"></i> Details
                </a>
                <form class="appointmentUpdateStatusForm">
                    <input type="hidden" name="appointmentId" value="@appointment.AppointmentId" />
                    <input type="hidden" name="status" value="Completed" />
                    <button type="submit" class="btn btn-sm btn-outline-success">
                        <i class="fa-solid fa-check"></i> Mark as Complete
                    </button>
                </form>
                <form class="appointmentUpdateStatusForm">
                    <input type="hidden" name="appointmentId" value="@appointment.AppointmentId" />
                    <input type="hidden" name="status" value="Cancelled" />
                    <button type="submit" class="btn btn-sm btn-outline-danger">
                        <i class="fa-solid fa-ban"></i> Cancel
                    </button>
                </form>
            </div>
        </div>
    }
}
else
{
    <div class="no-appointments">
        <i class="fas fa-calendar-alt"></i>
        <p>No upcoming appointments</p>
    </div>
}