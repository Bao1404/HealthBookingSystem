@model List<AppointmentDTO>
@*
    For more information on enabling MVC for empty projects, visit http://go.microsoft.com/fwlink/?LinkID=397860
*@
@if (Model.Any())
{
    @foreach (var appointment in Model)
    {
        <div class="appointment-item">
            <div class="appointment-time">
                <span class="time">@appointment.AppointmentDateTime.ToString("HH:mm")</span>
                <span class="date">@appointment.AppointmentDateTime.ToString("MMM dd")</span>
            </div>
            <div class="appointment-info">
                <h6>@appointment.PatientUser.User.FullName</h6>
                <p>@(string.IsNullOrEmpty(appointment.Notes) ? "General Consultation" : appointment.Notes)</p>
                <span class="status-badge status-@appointment.Status.ToLower()">@appointment.Status</span>
            </div>
            <div class="appointment-actions">
                @if (appointment.Status == "Upcoming")
                {
                    <form class="appointmentUpdateStatusForm">
                        <input type="hidden" name="appointmentId" value="@appointment.AppointmentId" />
                        <input type="hidden" name="status" value="Completed" />
                        <button type="submit" class="btn btn-sm btn-outline-success">
                            <i class="fa-solid fa-check"></i> Mark as Complete
                        </button>
                    </form>
                    <form class="appointmentUpdateStatusForm">
                        <input type="hidden" name="appointmentId" value="@appointment.AppointmentId" />
                        <input type="hidden" name="status" value="Cancelled" />
                        <button type="submit" class="btn btn-sm btn-outline-danger">
                            <i class="fa-solid fa-ban"></i> Cancel
                        </button>
                    </form>
                }
            </div>
        </div>
    }
}
else
{
    <div class="empty-state">
        <i class="fas fa-calendar-day"></i>
        <p>No appointments scheduled for today</p>
    </div>
}