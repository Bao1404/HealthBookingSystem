@{
    Layout = "_LayoutLogin";
    ViewData["Title"] = "Register";
}
<div class="row justify-content-center align-items-center min-vh-100 py-5">
    <div class="col-md-10 col-lg-8">
        <div class="card border-0 shadow-lg">
            <div class="card-body p-0">
                <!-- Progress Bar -->
                <div class="signup-progress">
                    <div class="progress-container">
                        <div class="progress-step active" data-step="1">
                            <div class="step-circle">
                                <i class="fas fa-user"></i>
                            </div>
                            <span class="step-label">Basic Info</span>
                        </div>
                        <div class="progress-line"></div>
                        <div class="progress-step active" data-step="2">
                            <div class="step-circle">
                                <i class="fas fa-heart-pulse"></i>
                            </div>
                            <span class="step-label">Health Info</span>
                        </div>
                        <div class="progress-line"></div>
                        <div class="progress-step active" data-step="3">
                            <div class="step-circle">
                                <i class="fas fa-check"></i>
                            </div>
                            <span class="step-label">Complete</span>
                        </div>
                    </div>
                </div>

                <!-- Form Container -->
                <div class="signup-form-container">
                    <!-- Step 3: Completion -->
                    <div>
                        <div class="completion-content">
                            <div class="success-icon">
                                <i class="fas fa-check-circle"></i>
                            </div>
                            <h3>Account Created Successfully!</h3>
                            <p class="text-secondary">Welcome to HealthCare Plus. Your account has been created and you can now access all our services.</p>

                            <div class="next-steps">
                                <h6>What's Next?</h6>
                                <ul>
                                    <li><i class="fas fa-calendar-check text-primary"></i> Book your first appointment</li>
                                    <li><i class="fas fa-user-md text-primary"></i> Browse available doctors</li>
                                    <li><i class="fas fa-comments text-primary"></i> Start a conversation with our AI assistant</li>
                                </ul>
                            </div>

                            <div class="completion-actions">
                                <a asp-controller="User" asp-action="Index" style="text-decoration: none;">
                                    <div type="button" class="btn btn-primary btn-lg">
                                        Go to Dashboard <i class="fas fa-arrow-right ms-2"></i>
                                    </div>
                                </a>
                                <a asp-controller="User" asp-action="Profile" style="text-decoration: none;">
                                    <div type="button" class="btn btn-outline-primary btn-lg ms-3">
                                        Complete Profile
                                    </div>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Footer -->
                <div class="signup-footer">
                    <p class="text-center text-secondary mb-3">
                        Already have an account?
                        <a asp-controller="Login" asp-action="Index" class="text-primary text-decoration-none fw-semibold">Sign in</a>
                    </p>
                    <p class="text-center">
                        <a asp-controller="Home" asp-action="Index" class="text-secondary text-decoration-none">← Back to Home</a>
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>
