@{
    Layout = "_LayoutLogin";
    ViewData["Title"] = "Register";
}
@model HealthBookingSystem.Models.RegisterViewModel;
<div class="row justify-content-center align-items-center min-vh-100 py-5">
    <div class="col-md-10 col-lg-8">
        <div class="card border-0 shadow-lg">
            <div class="card-body p-0">
                <!-- Progress Bar -->
                <div class="signup-progress">
                    <div class="progress-container">
                        <div class="progress-step active" data-step="1">
                            <div class="step-circle">
                                <i class="fas fa-user"></i>
                            </div>
                            <span class="step-label">Basic Info</span>
                        </div>
                        <div class="progress-line"></div>
                        <div class="progress-step" data-step="2">
                            <div class="step-circle">
                                <i class="fas fa-heart-pulse"></i>
                            </div>
                            <span class="step-label">Health Info</span>
                        </div>
                        <div class="progress-line"></div>
                        <div class="progress-step" data-step="3">
                            <div class="step-circle">
                                <i class="fas fa-check"></i>
                            </div>
                            <span class="step-label">Complete</span>
                        </div>
                    </div>
                </div>

                <span class="invalid-feedback">@ViewBag.ErrorMessage</span>

                <!-- Form Container -->
                <div class="signup-form-container">
                    <form id="multiStepSignupForm" action="/Register" method="POST">
                        <!-- Step 1: Basic Information -->
                        <div class="signup-step active" id="step1">
                            <div class="step-header">
                                <h3>Create Your Account</h3>
                                <p class="text-secondary">Let's start with your basic information</p>
                            </div>

                            <div class="step-content">
                                <div class="row">
                                    <div class="mb-3">
                                        <label for="firstName" class="form-label">Full Name *</label>
                                        <input asp-for="FullName" type="text" class="form-control" id="firstName" name="FullName" required>
                                        <span asp-validation-for="FullName" class="invalid-feedback"></span>
                                    </div>
                                </div>

                                <div class="mb-3">
                                    <label for="email" class="form-label">Email Address *</label>
                                    <input asp-for="Email" type="email" class="form-control" id="email" name="email" required>
                                    <div class="invalid-feedback">Please enter a valid email address.</div>
                                </div>

                                <div class="mb-3">
                                    <label for="phone" class="form-label">Phone Number *</label>
                                    <input asp-for="PhoneNumber" type="tel" class="form-control" id="phone" name="PhoneNumber" required>
                                    <div class="invalid-feedback">Please enter your phone number.</div>
                                </div>

                                <div class="row">
                                    <div class="col-md-6 mb-3">
                                        <label for="password" class="form-label">Password *</label>
                                        <div class="password-input-container">
                                            <input asp-for="Password" type="password" class="form-control" id="password" name="password" required>
                                            <button type="button" class="password-toggle" onclick="togglePassword('password')">
                                                <i class="fas fa-eye"></i>
                                            </button>
                                        </div>
                                        <div class="password-strength">
                                            <div class="strength-bar">
                                                <div class="strength-fill"></div>
                                            </div>
                                            <small class="strength-text">Password strength</small>
                                            <ul id="password-requirements" class="password-req-list">
                                                <li id="req-length" class="invalid"><i class="fas fa-circle"></i> Tối thiểu 8 ký tự</li>
                                                <li id="req-upper" class="invalid"><i class="fas fa-circle"></i> Ít nhất 1 chữ hoa</li>
                                                <li id="req-lower" class="invalid"><i class="fas fa-circle"></i> Ít nhất 1 chữ thường</li>
                                                <li id="req-number" class="invalid"><i class="fas fa-circle"></i> Ít nhất 1 số hoặc ký tự đặc biệt</li>
                                            </ul>
                                        </div>
                                        <div class="invalid-feedback">Password must be at least 8 characters long.</div>
                                    </div>
                                    <div class="col-md-6 mb-3">
                                        <label for="confirmPassword" class="form-label">Confirm Password *</label>
                                        <div class="password-input-container">
                                            <input asp-for="ConfirmPassword" type="password" class="form-control" id="confirmPassword" name="confirmPassword" required>
                                            <button type="button" class="password-toggle" onclick="togglePassword('confirmPassword')">
                                                <i class="fas fa-eye"></i>
                                            </button>
                                        </div>
                                        <span asp-validation-for="ConfirmPassword" class="invalid-feedback"></span>
                                    </div>
                                </div>
                            </div>

                            <div class="step-actions">
                                <button type="button" class="btn btn-primary btn-lg" onclick="nextStep()">
                                    Continue <i class="fas fa-arrow-right ms-2"></i>
                                </button>
                            </div>
                        </div>

                        <!-- Step 2: Health Information (Only for Patients) -->
                        <div class="signup-step" id="step2">
                            <div class="step-header">
                                <h3>Health Information</h3>
                                <p class="text-secondary">Help us provide better care with your health details</p>
                            </div>

                            <div class="step-content">
                                <div class="health-info-notice">
                                    <div class="notice-icon">
                                        <i class="fas fa-shield-alt"></i>
                                    </div>
                                    <div class="notice-content">
                                        <h6>Your Privacy is Protected</h6>
                                        <p>All health information is encrypted and only accessible to your healthcare providers.</p>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-md-6 mb-3">
                                        <label for="dateOfBirth" class="form-label">Date of Birth *</label>
                                        <input asp-for="Dob" type="date" class="form-control" id="dateOfBirth" name="Dob" required>
                                        <div class="invalid-feedback">Please enter your date of birth.</div>
                                    </div>
                                    <div class="col-md-6 mb-3">
                                        <label for="gender" class="form-label">Gender *</label>
                                        <select asp-for="Gender" class="form-select" id="gender" name="gender" required>
                                            <option value="">Select Gender</option>
                                            <option value="male">Male</option>
                                            <option value="female">Female</option>
                                            <option value="other">Other</option>
                                        </select>
                                        <div class="invalid-feedback">Please select your gender.</div>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="mb-3">
                                        <label for="address" class="form-label">Address</label>
                                        <input asp-for="Address" type="text" class="form-control" id="address" name="address" required>
                                        <div class="invalid-feedback">Please enter your address.</div>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-md-6 mb-3">
                                        <label for="bloodType" class="form-label">Blood Type</label>
                                        <select asp-for="BloodType" class="form-select" id="bloodType" name="bloodType">
                                            <option value="">Select Blood Type</option>
                                            <option value="A+">A+</option>
                                            <option value="A-">A-</option>
                                            <option value="B+">B+</option>
                                            <option value="B-">B-</option>
                                            <option value="AB+">AB+</option>
                                            <option value="AB-">AB-</option>
                                            <option value="O+">O+</option>
                                            <option value="O-">O-</option>
                                            <option value="unknown">Unknown</option>
                                        </select>
                                    </div>
                                    <div class="col-md-6 mb-3">
                                        <label for="emergencyContact" class="form-label">Emergency Contact*</label>
                                        <input asp-for="EmergencyContact" type="tel" class="form-control" id="emergencyContact" name="emergencyContact" placeholder="Emergency contact number">
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-md-4 mb-3">
                                        <label for="weight" class="form-label">Weight</label>
                                        <div class="input-group">
                                            <input asp-for="Weight" type="number" class="form-control" id="weight" name="weight" placeholder="70" step="0.1" min="1" max="500">
                                            <span class="form-select weight-unit" id="weightUnit" name="weightUnit" style="max-width: 80px; --bs-form-select-bg-img: none;"> kg</span>
                                        </div>
                                    </div>
                                    <div class="col-md-4 mb-3">
                                        <label for="height" class="form-label">Height</label>
                                        <div class="input-group">
                                            <input asp-for="Height" type="number" class="form-control" id="height" name="height" placeholder="170" step="0.1" min="50" max="300">
                                            <span class="form-select height-unit" id="heightUnit" name="heightUnit" style="max-width: 80px;  --bs-form-select-bg-img: none;">cm</span>
                                        </div>
                                    </div>
                                    <div class="col-md-4 mb-3">
                                        <label for="bmi" class="form-label">BMI</label>
                                        <div class="bmi-container">
                                            <input asp-for="Bmi" type="number" class="form-control" id="bmi" name="bmi" readonly placeholder="Auto-calculated">
                                            <div class="bmi-category" id="bmiCategory"></div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="step-actions">
                                <button type="button" class="btn btn-outline-secondary btn-lg me-3" onclick="prevStep()">
                                    <i class="fas fa-arrow-left me-2"></i> Back
                                </button>
                                <button type="submit" class="btn btn-primary btn-lg" onclick="nextStep()">
                                    Continue <i class="fas fa-arrow-right ms-2"></i>
                                </button>
                            </div>
                        </div>
                    </form>
                </div>

                <!-- Footer -->
                <div class="signup-footer">
                    <p class="text-center text-secondary mb-3">
                        Already have an account?
                        <a asp-controller="Login" asp-action="Index" class="text-primary text-decoration-none fw-semibold">Sign in</a>
                    </p>
                    <p class="text-center">
                        <a asp-controller="Home" asp-action="Index" class="text-secondary text-decoration-none">← Back to Home</a>
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .password-req-list {
        list-style: none;
        padding: 0;
        margin-top: 10px;
        font-size: 0.85rem;
        color: #666;
    }

        .password-req-list li {
            margin-bottom: 4px;
            display: flex;
            align-items: center;
            gap: 8px;
            transition: color 0.3s ease;
        }

            .password-req-list li i {
                font-size: 6px; /* Icon chấm tròn nhỏ */
            }

            /* Trạng thái hợp lệ */
            .password-req-list li.valid {
                color: #10b981; /* Màu xanh lá */
            }

                .password-req-list li.valid i {
                    color: #10b981;
                }

            /* Trạng thái không hợp lệ (mặc định) */
            .password-req-list li.invalid {
                color: #9ca3af; /* Màu xám */
            }
</style>
<script src="~/js/register/register.js"></script>