@using HealthBookingSystemWebApp.DTOs
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    Layout = "_LayoutAdmin";
    ViewData["Title"] = "Doctor Management";
}
@model List<DoctorDTO>
<!-- Main Content -->
<div class="main-content">
    <!-- Header -->
    <header class="header">
        <h1 class="header-title">Doctor Management</h1>
        <div class="search-container">
            <i class="fas fa-search search-icon"></i>
            <input type="text" class="search-input" placeholder="Search doctors..." id="searchInput">
        </div>
        <div class="header-actions">
            <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addDoctorModal">
                <i class="fas fa-plus"></i>
                Add Doctor
            </button>
        </div>
    </header>
    <div class="content">
        <!-- Filters -->
        <div class="dashboard-card mb-2">
            <div class="card-header">
                <h5 class="card-title">Filters</h5>
                <button class="btn btn-sm btn-outline-secondary" onclick="clearFilters()">
                    <i class="fas fa-times"></i>
                    Clear All
                </button>
            </div>
            <div class="card-content">
                <div class="row">
                    <div class="col-md-4">
                        <label class="form-label">Status</label>
                        <select class="form-select" id="statusFilter" onchange="applyFilters()">
                            <option value="">All</option>
                            <option value="active">Active</option>
                            <option value="inactive">Inactive</option>
                        </select>
                    </div>
                </div>
            </div>
        </div>
        <!-- Doctors Table -->
        <div class="dashboard-card">
            <div class="card-header">
                <h5 class="card-title">Doctor List</h5>
            </div>
            <div class="card-content">
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Full Name</th>
                                <th>Phone Number</th>
                                <th>Specialty</th>
                                <th>Created At</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody id="">
                            <partial name="Partials/AdminPartials/_DoctorList" model="Model" />
                        </tbody>
                    </table>
                    <div id="noDataMessage" style="display:none;text-align:center;padding:20px;color:#888;">No doctors found.</div>
                </div>
                <nav aria-label="Doctors pagination">
                    <ul class="pagination justify-content-center" id="pagination"></ul>
                </nav>
            </div>
        </div>
        <div class="dashboard-card" id="bulkActionsCard" style="display: none;">
            <div class="card-content">
                <div class="d-flex align-items-center justify-content-between">
                    <div>
                        <span id="selectedCount">0</span> doctors selected
                    </div>
                    <div class="d-flex gap-2">
                        <button class="btn btn-sm btn-success" onclick="bulkAction('activate')">
                            <i class="fas fa-check"></i> Activate
                        </button>
                        <button class="btn btn-sm btn-warning" onclick="bulkAction('deactivate')">
                            <i class="fas fa-pause"></i> Deactivate
                        </button>
                        <button class="btn btn-sm btn-danger" onclick="bulkAction('delete')">
                            <i class="fas fa-trash"></i> Delete
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Add Doctor Modal -->
<div class="modal fade" id="addDoctorModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Add New Doctor</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
                <form id="addDoctor" method="POST" asp-action="AddDoctor">
            <div class="modal-body">
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Full Name</label>
                            <input type="text" class="form-control" name="fullName" placeholder="Tên của bạn?" required>
                            <div class="invalid-feedback"></div>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Phone Number</label>
                            <input type="text" class="form-control" name="phone" placeholder="SĐT?" required>
                            <div class="invalid-feedback"></div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="mb-3">
                            <label class="form-label">Email</label>
                            <input type="email" class="form-control" name="email" placeholder="Email?" required>
                            <div class="invalid-feedback"></div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Specialty</label>
                            <select class="form-select" name="specialty" required>
                                <option value="" selected>Select Specialty</option>
                                @foreach (var specialty in ViewBag.Specialties)
                                {
                                    <option value="@specialty.SpecialtyId">@specialty.Name</option>
                                }
                            </select>
                            <div class="invalid-feedback"></div>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Experience</label>
                            <input type="text" class="form-control" name="exp" placeholder="Bao nhiêu năm kinh nghiệm?">
                        </div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Bio</label>
                        <textarea class="form-control" name="bio" placeholder="Mô tả"></textarea>
                    </div>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Password</label>
                            <input type="password" class="form-control" name="password" id="password" required>
                            <!-- Thêm đoạn này để hiện yêu cầu mật khẩu -->
                            <ul id="password-requirements" class="password-req-list mt-2">
                                <li id="req-length" class="invalid"><i class="fas fa-circle"></i> Tối thiểu 8 ký tự</li>
                                <li id="req-upper" class="invalid"><i class="fas fa-circle"></i> Ít nhất 1 chữ hoa</li>
                                <li id="req-lower" class="invalid"><i class="fas fa-circle"></i> Ít nhất 1 chữ thường</li>
                                <li id="req-number" class="invalid"><i class="fas fa-circle"></i> Ít nhất 1 số/ký tự đặc biệt</li>
                            </ul>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Confirm Password</label>
                            <input type="password" class="form-control" name="confirmPassword" id="confirmPassword" required>
                            <div class="invalid-feedback"></div> <!-- Nơi hiện lỗi -->
                        </div>
                    </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="submit" class="btn btn-primary">Add User</button>
            </div>
                </form>
        </div>
    </div>
</div>
<style>
    .password-req-list {
        list-style: none;
        padding: 0;
        font-size: 0.85rem;
        color: #666;
    }

        .password-req-list li {
            margin-bottom: 2px;
            display: flex;
            align-items: center;
            gap: 6px;
        }

            .password-req-list li i {
                font-size: 6px;
            }

            .password-req-list li.valid {
                color: #10b981;
            }

                .password-req-list li.valid i {
                    color: #10b981;
                }

            .password-req-list li.invalid {
                color: #9ca3af;
            }

    /* CSS cho input lỗi */
    .is-invalid {
        border-color: #dc3545;
    }

    .invalid-feedback {
        display: none;
        color: #dc3545;
        font-size: 0.875em;
        margin-top: 0.25rem;
    }
</style>
<script src="~/js/admin/admin-doctors.js"></script>
<script src="~/js/admin/add-doctor.js"></script>
<script>
    // Show message when no data
    function updateNoDataMessage() {
        var tbody = document.getElementById('usersTableBody');
        var noData = document.getElementById('noDataMessage');
        if (tbody && noData) {
            if (tbody.children.length === 0) {
                noData.style.display = 'block';
            } else {
                noData.style.display = 'none';
            }
        }
    }
    document.addEventListener('DOMContentLoaded', function() {
        updateNoDataMessage();
        var observer = new MutationObserver(updateNoDataMessage);
        observer.observe(document.getElementById('usersTableBody'), { childList: true });
    });

</script>
