@{
    Layout = "_LayoutAdmin";
    ViewData["Title"] = "Patient Management";
}
@model List<PatientDTO>
<!-- Main Content -->
<div class="main-content">
    <!-- Header -->
    <header class="header">
        <h1 class="header-title">Patient Management</h1>
        <div class="search-container">
            <i class="fas fa-search search-icon"></i>
            <input type="text" class="search-input" placeholder="Search patients..." id="searchInput">
        </div>
    </header>
    <div class="content">
        <div class="dashboard-card">
            <div class="card-header">
                <h5 class="card-title">Patient List</h5>
            </div>
            <div class="card-content">
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Full Name</th>
                                <th>Phone Number</th>
                                <th>Address</th>
                                <th>Created At</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody id="">
                            <partial name="Partials/AdminPartials/_PatientList" model="ViewBag.Doctors" />
                        </tbody>
                    </table>
                    <div id="noDataMessage" style="display:none;text-align:center;padding:20px;color:#888;">No patients found.</div>
                </div>
                <nav aria-label="Patients pagination">
                    <ul class="pagination justify-content-center" id="pagination"></ul>
                </nav>
            </div>
        </div>
        <div class="dashboard-card" id="bulkActionsCard" style="display: none;">
            <div class="card-content">
                <div class="d-flex align-items-center justify-content-between">
                    <div>
                        <span id="selectedCount">0</span> patients selected
                    </div>
                    <div class="d-flex gap-2">
                        <button class="btn btn-sm btn-success" onclick="bulkAction('activate')">
                            <i class="fas fa-check"></i> Activate
                        </button>
                        <button class="btn btn-sm btn-warning" onclick="bulkAction('deactivate')">
                            <i class="fas fa-pause"></i> Deactivate
                        </button>
                        <button class="btn btn-sm btn-danger" onclick="bulkAction('delete')">
                            <i class="fas fa-trash"></i> Delete
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="~/js/admin/admin-patients.js"></script>
<script>
    // Show message when no data
    function updateNoDataMessage() {
        var tbody = document.getElementById('usersTableBody');
        var noData = document.getElementById('noDataMessage');
        if (tbody && noData) {
            if (tbody.children.length === 0) {
                noData.style.display = 'block';
            } else {
                noData.style.display = 'none';
            }
        }
    }
    document.addEventListener('DOMContentLoaded', function() {
        updateNoDataMessage();
        var observer = new MutationObserver(updateNoDataMessage);
        observer.observe(document.getElementById('usersTableBody'), { childList: true });
    });
</script>